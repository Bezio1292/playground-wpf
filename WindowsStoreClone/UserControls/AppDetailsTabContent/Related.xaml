<UserControl x:Class="WindowsStoreClone.UserControls.AppDetailsTabContent.Related"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsStoreClone.UserControls.AppDetailsTabContent"
             xmlns:uc="clr-namespace:WindowsStoreClone.UserControls"
             mc:Ignorable="d" 
             Name="RelatedUserControl"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel
        Orientation="Vertical"
        VerticalAlignment="Top"
        HorizontalAlignment="Left"
        Background="#2e2e2e"
        Width="{Binding ElementName=RelatedUserControl, Path=ActualWidth}"
        >
        <Label FontSize="25" Foreground="White" Margin="0,0,0,30">People aslo like</Label>
        <uc:AppsViewer x:Name="AppViewer1"/>
        <Label FontSize="25" Foreground="White" Margin="0,0,0,30">Top free games</Label>
        <uc:AppsViewer x:Name="AppViewer2"/>
        <Label FontSize="25" Foreground="White" Margin="0,0,0,30">Top free apps</Label>
        <uc:AppsViewer x:Name="AppViewer3"/>
    </StackPanel>
</UserControl>
